@page "/firms"
@inject IFirmsService firmsService

<ConfirmedAuthorizeView>
    <div class="py-10">
        <header>
            <div class="mx-auto px-4 sm:px-6 lg:px-8 pb-4 sm:pb-6 lg:pb-8">
                <h1 class="text-3xl font-bold leading-tight text-gray-900">Firms</h1>
            </div>
        </header>
        <main>
            <div class="mx-auto sm:px-6 lg:px-8">
                <!-- Page Content -->
                <UI.Components.Firms.FirmsGrid filter="@(e => e.FirmType == FirmType.Advisor)" IsConfirmed=true ShowExport=false IsAdmin=false TableName="Municipal Advisor Firms" />
                <!-- /End Page Content -->
            </div>
        </main>
    </div>
</ConfirmedAuthorizeView>