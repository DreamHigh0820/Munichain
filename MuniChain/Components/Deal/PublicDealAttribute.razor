<div class="sm:col-span-1">
    <div class="text-sm font-medium text-gray-500">
        @PropertyName
    </div>
    <div class="mt-1 text-sm text-gray-900">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string PropertyName { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
