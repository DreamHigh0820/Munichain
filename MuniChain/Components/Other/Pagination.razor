@inherits PaginationBase
<nav class="isolate inline-flex rounded-md shadow-sm space-x-1" aria-label="Pagination">
    @foreach (var link in Links)
    {
        <button @onclick="@(() => SelectedPageInternal(link))" class="relative inline-flex items-center border px-4 py-2 text-sm font-medium focus:z-20 rounded-md bg-white border-gray-300 text-gray-500 hover:bg-gray-50 @(link.Enabled ? null : "bg-white border-gray-300 text-gray-500 hover:bg-transparent") @(link.Active ? "z-10 bg-emerald-50 hover:bg-emerald-50 border-emerald-500 text-emerald-600" : null)">@link.Text</button>
    }
</nav>
